<h3>LISTA DE PRODUCTOS</h3>

<br>
  <!--***********************************  M  E  N   U  ******************************************************************-->
  <div class="menu">
    <div class="cuadro">
        <a href="/principal" class="cuadro">PRINCIPAL</a>
    </div>
    <div class="cuadro">
        <a href="/turnos" class="cuadro">TURNOS</a>
    </div>
    <div class="cuadro">
        <a href="/index" class="cuadro">REGISTRO</a>
    </div>
    <div class="cuadro">
        <a href="/contactos" class="cuadro">CONTACTOS</a>
    </div>
</div>

  <!--*****************************************************************************************************-->
<br>
<div class="container1">
<form action="/guardar" method="POST" >
  <div class="formulario1">
      <div class="mb-3">
        <!--<label>Nombre:</label>-->
        <input type="text" name="nombre" class="form-control" placeholder="Nombre del Producto" required>
      </div>
      <div class="mb-3">
        <!--<label>Precio:</label>-->
        <input type="number" step="0.01" name="precio" class="form-control" placeholder="Precio" required>
      </div>
      <div class="mb-3">
        <!--<label>Stock:</label>-->
        <input type="number" step="1" name="stock" class="form-control" placeholder="Stock" required>
      </div>
      <div class="mb-30">
        <button class="boton">Agregar</button>
      </div>
    </div>
</form>
<br><br>

  <!-- ****************************************************************************************************** -->
    <table class="tabla">
      <thead>
        <tr>
          <th style="width: 5%; align-content: center; font-size: 20px; height: 55px; background-color: black; color:white;">ID</th>
          <th style="width: 20%; align-content: center; font-size: 20px; background-color: black; color:white;">Nombre</th>
          <th style="width: 15%; align-content: center; font-size: 20px; background-color: black; color:white;">Precio</th>
          <th style="width: 15%; align-content: center; font-size: 20px; background-color: black; color:white;">Stock</th>
          <th style="width: 30%; align-content: center; font-size: 20px; background-color: black; color:white;">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% productos.forEach(p => { %>
        <tr>
          <th><%= p.id %></th>
          <th><%= p.nombre %></th>
          <th>$<%= p.precio %></th>
          <th><%= p.stock %></th>
          <td>
            <a href="/editar/<%= p.id %>" class="btn btn-sm btn-warning">Editar
              
            </a>
            <a href="/eliminar/<%= p.id %>" class="btn btn-sm btn-danger">Eliminar</a>
            
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

<br><br>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
